@model FocusAppTest2.ViewModels.MemberVM
@{
    ViewBag.Title = "Login";
}

<fb:login-button autologoutlink="true" perms="read_friendlists, create_event, email, publish_stream"></fb:login-button>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { data_ajax = "false" }))
{
    @Html.ValidationSummary()
    <div>
        @Html.LabelFor(x => x.Email)
        @Html.EditorFor(x => x.Email)
    </div>
    <div>
        @Html.LabelFor(x => x.Password)
        @Html.EditorFor(x => x.Password)
    </div>
    <div>
        <input type="submit" value="Login or Register" class="ui-btn" data-transition="slide" />
    </div>
}
<footer data-role="footer"></footer>
