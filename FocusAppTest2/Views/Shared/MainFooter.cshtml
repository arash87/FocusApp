<div data-role="footer">
    @if (Request.IsAuthenticated)
    {
        <div data-role="navbar">
            <ul class="footerbar">
                <li>
                    <a href="@Url.Action("Category","Main")" class="courseBar footerlink ui-btn ui-icon-bars ui-btn-icon-top"
                       data-ajax="false" @*data-transition="slide"*@>Kurs</a>
                </li>
                <li>
                    <a href="@Url.Action("MyCourses", "Main")" class="favBar footerlink ui-btn ui-icon-heart ui-btn-icon-top"
                       data-ajax="false" @*data-transition="slide"*@>Mine Kurs</a>
                </li>
                <li>
                    <a href="@Url.Action("ProfileMenu", "Main")" class="profileBar footerlink ui-btn ui-icon-user ui-btn-icon-top"
                       data-ajax="false" @*data-transition="slide"*@>Profil</a>
                </li>
                <li>
                    <a href="@Url.Action("Contact","Main")" class="contactBar footerlink ui-btn ui-icon-info ui-btn-icon-top"
                       data-ajax="false" @*data-transition="slide"*@>Kontakt</a>
                </li>
            </ul>
        </div>
    }
    @if (ViewBag.Title == "Profile")
    {
        <div data-role="navbar" class="profileFootbar">
            <ul class="footerbar">
                <li>
                    <a href="#" class="changeInput footerlink ui-btn" id="user"><span class="glyphicon glyphicon-user "></span></a>
                </li>
                <li>
                    <a href="#" class="changeInput footerlink ui-btn" id="home"><span class="glyphicon glyphicon-envelope"></span></a>
                </li>
                <li>
                    <a href="#" class="changeInput footerlink ui-btn" id="calendar"><span class="glyphicon glyphicon-gift"></span></a>
                </li>
                <li>
                    <a href="#" class="changeInput footerlink ui-btn" id="phoneButton"><span class="glyphicon glyphicon-phone"></span></a>
                </li>
            </ul>
        </div>
    }
</div>
