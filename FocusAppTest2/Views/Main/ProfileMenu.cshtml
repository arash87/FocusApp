@model FocusAppTest2.ServiceReference1.Profile
@{
    ViewBag.Title = "ProfileMenu";
}

<div class="ui-content col-xs-offset-1 col-sm-offset-1">
    <div id="container">
        <div data-role="controlgroup" class="profileCategory">
            <a href="@Url.Action("Profile","Main")" class="ui-btn ui-icon-user ui-btn-icon-left ui-corner-all">Change/View Profile</a>
            @if (User.IsInRole("facebookmember"))
            {
                <a href="#" onclick="fb_logout();" class="ui-btn ui-icon-power ui-btn-icon-left ui-corner-all">
                    Log Out
                </a>
            }
            else
            {
                <a href="@Url.Action("Logout", "Home")" class="ui-btn ui-icon-power ui-btn-icon-left ui-corner-all"> Log Out</a>
            }
            <div data-role="collapsible" class="deleteUser" data-collapsed-icon="delete">
                <h1>Delete Account</h1>
                @using (@Html.BeginForm("DeleteUser", "Home"))
                {
                    @Html.HiddenFor(x => x.memberId)

                    <a href="#" data-role="button" data-inline="true" onclick="$(this).closest('form').submit(); return fb_logout();">Confirm</a>
                }
            </div>

            
