@model FocusAppTest2.ServiceReference1.Profile
@{
    ViewBag.Title = "Profile";
}
<section data-role="page">
    @RenderPage("../Shared/MainHeader.cshtml")
    <div class="ui-content">
            <form>
                <fieldset class="ui-field-contain">
                    <div>
                        <label for="firstname">First Name:</label>
                        <input type="text" name="firstname" id="firstname" value="@Model.firstname" />
                        <label for="lastname">Last Name:</label>
                        <input type="text" name="lastname" id="lastname" value="@Model.lastname" />
                        <label for="address">Address:</label>
                        <input type="text" name="address" id="address" value="@Model.address" />
                        <label for="zip">Zip:</label>
                        <input type="number" name="zip" id="zip" value="@Model.zip" />
                        <label for="city">City:</label>
                        <input type="text" name="city" id="city" value="@Model.city" />
                        <label for="phone">Phone:</label>
                        <input type="number" name="phone" id="phone" value="@Model.phone" />
                        <label for="birthdate">Birthdate:</label>
                        <input type="date" name="birthdate" id="birthdate" value="@ViewBag.Data1" />
                    </div>
                </fieldset>
                <div class="formContainer" data-id="@Model.memberId">
                    <a href="#" data-role="button" data-theme="b" data-icon="check" data-inline="true" data-corners="true"
                       data-shadow="true" data-iconshadow="true" class="ui-btn ui-shadow ui-btn-corner-all ui-btn-inline ui-button-icon-left" id="post-update">
                        <span class="ui-btn-inner ui-btn-corner-all">
                            <span class="ui-btn-text">Update</span>
                        </span>
                    </a>
                </div>
            </form>
    </div>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="@Url.Action("Courses","Main")" class="ui-btn ui-icon-home ui-btn-icon-left">Courses</a></li>
                <li><a href="@Url.Action("Profile","Main")" class="ui-btn ui-icon-user ui-btn-icon-left ui-state-persist ui-btn-active">Profile</a></li>
                <li><a href="@Url.Action("Contact","Main")" class="ui-btn ui-icon-info ui-btn-icon-left">Contact</a></li>
            </ul>
        </div>
    </div>
</section>
