                <li><a href="@Url.Action("Profile","Main")" class="ui-btn ui-icon-user ui-btn-icon-left">Profile</a></li>
                <li><a href="@Url.Action("Contact","Main")" class="ui-btn ui-icon-info ui-btn-icon-left">Contact</a></li>
            </ul>
        </div>
    </div>
</section>