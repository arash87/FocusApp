            Course
            <input type="submit" data-enhanced="true" value="Course" />
        </div>  
    </form>*@ 
       
    <a href="/Main/Courses" id="toCourses">Courses</a>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="@Url.Action("Courses","Main")" class="ui-btn ui-icon-home ui-btn-icon-left ui-state-persist ui-btn-active" >Courses</a></li>
                <li><a href="@Url.Action("Profile","Main")" class="ui-btn ui-icon-user ui-btn-icon-left">Profile</a></li>
                <li><a href="@Url.Action("Contact","Main")" class="ui-btn ui-icon-info ui-btn-icon-left">Contact</a></li>
            </ul>
        </div>
    </div>
</section>
